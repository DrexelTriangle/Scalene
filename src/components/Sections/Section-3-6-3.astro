---
import PhotoArticle from "../PhotoArticle.astro";
const { articles } = Astro.props
import SectionRow from "./Section-Row.astro"

---
<div class="grid grid-cols-[1fr] md:grid-cols-[3fr_6fr] lg:grid-cols-[3fr_6fr_3fr] lg:divide-x lg:divide-triangleGray-400 ">
    <!-- Column 1: 2 blocks -->
    <div class="flex flex-col space-y-2 lg:pr-[12px] order-2 md:order-none">
        {articles.slice(1, 3).map(article => (
            <PhotoArticle title={article.title} 
            image={article.featured_image}
            author={article.authors}
            date={article.date}
            slug={"article/"+article.slug}/>
        ))}
    </div>

    <!-- Column 2: 1 block -->
    <div class="flex flex-col space-y-2 md:px-[12px] order-1 md:order-none">
        {articles.slice(0, 1).map(article => (
            <PhotoArticle title={article.title} 
            image={article.featured_image}
            author={article.authors}
            date={article.date}
            excerpt={article.excerpt}
            slug={"article/"+article.slug}
            breaking={article.breaking_news}/>
        ))}
    </div>

    <!-- Column 3: 5 blocks -->
    <div class="flex flex-col lg:pl-[12px] order-3 md:order-none md:col-span-2 lg:col-span-1">
        {articles.slice(3, 9).map(article => (
            <PhotoArticle title={article.title} 
            category={article.categories_list}
            author={article.authors}
            date={article.date}
            slug={"article/"+article.slug}/>
        ))}
    </div>
</div>